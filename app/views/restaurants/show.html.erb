<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<!-- NEW -->
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> (<%= review.rating %> stars)</li>
    <li class="list-group-item"><%= link_to "Remove", review_path(review.id), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <%# review_path(review) also ok %>
  <% end %>
</ul>



