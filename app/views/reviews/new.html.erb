<%# Helper                              HTTP request %>
<%# `form_for(@review)`                 POST to `reviews_path`**             (/reviews) %>
<%# `form_for([@restaurant, @review])`  POST to `restaurant_reviews_path`**  (/restaurants/:restaurant_id/reviews) %>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: %w(1 2 3 4 5) %> <%# added collection %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', restaurants_path %>
